<%- include('../layout/header') %>

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/events">Events</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= event.title %></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <img src="<%= event.image %>" alt="<%= event.title %>" class="img-fluid rounded mb-4 event-detail-image">
            <h1 class="event-title mb-3"><%= event.title %></h1>
            
            <div class="event-meta mb-4">
                <span class="badge bg-primary me-2"><i class="bi bi-calendar"></i> <%= event.date %></span>
                <span class="badge bg-primary me-2"><i class="bi bi-clock"></i> <%= event.time %></span>
                <span class="badge bg-primary"><i class="bi bi-geo-alt"></i> <%= event.venue %></span>
            </div>
            
            <div class="event-description mb-4">
                <h4>About This Event</h4>
                <p><%= event.description %></p>
            </div>
            
            <div class="mb-4">
                <h4>Seat Availability</h4>
                <p>Total seats: <%= event.totalSeats %></p>
                <p>Available seats: <%= event.totalSeats - event.bookedSeats.length %></p>
            </div>
            
            <div class="d-flex mt-4 action-buttons">
                <a href="/events/<%= event.id %>/book" class="btn btn-primary me-2">Book Seats</a>
                <a href="/events/<%= event.id %>/edit" class="btn btn-outline-secondary me-2">Edit Event</a>
                <form action="/events/<%= event.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this event?')">Delete Event</button>
                </form>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card event-sidebar-card mb-4">
                <div class="card-body">
                    <h4 class="card-title">Event Details</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-calendar"></i> Date</span>
                            <span class="text-primary"><%= event.date %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-clock"></i> Time</span>
                            <span class="text-primary"><%= event.time %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-geo-alt"></i> Venue</span>
                            <span class="text-primary"><%= event.venue %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-person"></i> Available Seats</span>
                            <span class="text-primary"><%= event.totalSeats - event.bookedSeats.length %> / <%= event.totalSeats %></span>
                        </li>
                    </ul>
                    <div class="mt-3">
                        <a href="/events/<%= event.id %>/book" class="btn btn-primary w-100">Book Now</a>
                    </div>
                </div>
            </div>
            
            <div class="card share-card">
                <div class="card-body">
                    <h4 class="card-title">Share this event</h4>
                    <div class="d-flex justify-content-around share-buttons">
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="btn btn-outline-info"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="btn btn-outline-success"><i class="bi bi-whatsapp"></i></a>
                        <a href="#" class="btn btn-outline-secondary"><i class="bi bi-envelope"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layout/footer') %>